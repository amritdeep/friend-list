<div class="container">
	<%= render "home/header" %>
	<div class="span12">
	<div class="alert alert-success">
		<%= notice %>
	</div>
	<%= form_tag("/contact/send_msg") do %>
		<%= text_field_tag :name, nil, placeholder: "Your Name Please" %></br>
		<%= email_field_tag :email, nil, placeholder:  "Your Email Please" %></br>
		<%= text_field_tag :address, nil, placeholder: "Your Address Please" %></br>
		<%= text_area_tag 'message', nil, placeholder:  "Your Message Please", :size => "25x10" %></br>
		<%= submit_tag "Submit Message", class: "btn btn-success" %>
	<% end %>
	</div>
</div>