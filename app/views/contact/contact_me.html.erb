<div class="well form-horizonta">
  <%= form_tag("/contact/send_msg", class: "well") do %>
    <%= text_field_tag :name, nil, placeholder: "Your Name Please", class: "span3" %></br>
    <%= email_field_tag :email, nil, placeholder:  "Your Email Please", class: "span3" %></br>
    <%= text_field_tag :address, nil, placeholder: "Your Address Please", class: "span3" %></br>
    <%= text_area_tag 'message', nil, placeholder:  "Your Message Please", :size => "25x10", class: "span3" %></br>
    <%= submit_tag "Submit Message", class: "btn btn-primary" %>
  <% end %>
</div>