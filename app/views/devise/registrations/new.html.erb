<h3>Sign up</h3>
<div class="form-horizonta">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: "well span5") do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, class: "span3" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, class: "span3" %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, class: "span3" %></div>

  <div><%= f.submit "Sign up", class: "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>