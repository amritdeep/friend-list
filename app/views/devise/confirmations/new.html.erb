<h2>Resend confirmation instructions</h2>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }, class: "well span6") do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, class: "span3" %></div>

  <div><%= f.submit "Resend confirmation instructions", class: "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
