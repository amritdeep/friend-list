<h4>Sign in</h2>
<div class="form-horizontal" >

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), class: "well form-inline") do |f| %>
  <!-- <div><%= f.label :email %><br /> -->
  <%= f.email_field :email, :autofocus => true, placeholder: "Email address....", class: "span3" %>
<!-- </div> -->

  <!-- <div><%= f.label :password %><br /> -->
  <%= f.password_field :password,placeholder: "Password....", class: "span3" %>
<!-- </div> -->

 <!-- <div> -->
  	<%= f.submit "Sign in", class: "btn btn-primary"  %>
  <!-- </div> -->

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

 
<% end %>

<%= render "devise/shared/links" %>
  
</div>